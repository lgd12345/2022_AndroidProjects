<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cat1"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".NoticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="공지사항"
                android:textSize="50sp" />
<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="번호    분류    제목   작성일   조회수 "
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="   1         기타     천둥의검     2022.09.17      110   "
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="    2        기타     고양이와검   2022.09.17        17    "
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="  3         기타     강아지와검  2022.09.17        5    "
                android:textSize="18sp" />-->

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:text="번호"
                        android:textSize="25sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="분류"
                        android:textSize="25sp" />

                    <TextView
                        android:gravity="center"
                        android:text="제목"
                        android:textSize="25sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="작성일"
                        android:textSize="25sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="조회수"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="1"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="기타"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="천둥의검"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="2022.09.17"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="110"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="2"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="기타"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="고양이와검"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="2022.09.17"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="17"
                        android:textSize="20sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="3"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="기타"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="강아지와검"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="2022.09.17"
                        android:textSize="20sp" />

                    <TextView
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="5"
                        android:textSize="20sp" />
                </TableRow>

            </TableLayout>

        </LinearLayout>


        <Button
            android:id="@+id/move1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="!천둥검!"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/move2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="내정보이동"
                android:textSize="10sp" />

            <Button
                android:id="@+id/move3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="리포트이동"
                android:textSize="10sp" />

            <Button
                android:id="@+id/move4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="계정설정이동"
                android:textSize="10sp" />

            <Button
                android:id="@+id/move5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="고객센터이동"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/naviMenu"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#8BC34A"
        android:fitsSystemWindows="true"
        android:gravity="center_horizontal"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu_menu" />
</androidx.drawerlayout.widget.DrawerLayout>